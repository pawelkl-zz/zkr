%header.navbar.navbar-fixed-top
  .navbar-inner
    -# .logo
      = link_to image_tag("top.jpg", alt: "Rails"), 'http://rubyonrails.org/'
    .container
      = link_to "Żłobek Kubusiowy Raj", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Strona Główna", root_path
          %li= link_to "O nas",         about_path
          %li= link_to "Strefa Rodzica",strefarodzica_path
          %li= link_to "Plan Dnia",     plandnia_path
          %li= link_to "Opłaty",        oplaty_path
          %li= link_to "Galeria Zdjęć", galeria_path
          %li= link_to "Kontakt",       contact_path

          - if signed_in?
            %li= link_to "Users",       users_path
            %li.dropdown#fat-menu
              <a class="dropdown-toggle" href="#" data-toggle= "dropdown">Account <b.caret</b></a>
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings",edit_user_path(current_user)
                %li.divider
                %li
                  = link_to "Sign out", signout_path, method: "delete"
          - else
            %li= link_to "Logowanie",     signin_path